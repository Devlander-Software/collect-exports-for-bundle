{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "typings",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "@types/jest"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/run-jest-coverage.ts"],
  "exclude": [
    "example",
    "rollup.config.mjs",
    "node_modules",
    "**/*.spec.ts",
    "*.d.ts",
    "__tests__",
    "typings",
    "dist"
  ]
}
